{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "ConnectionStrings": {
    "agedb": "Host=localhost;Port=5432;Database=app;Username=app;Password=app;Include Error Detail=true"
  },
  "EventSinks": {
    "Kafka": [
      {
        "Name": "KafkaSink1",
        "BrokerList": "***",
        "Topic": "***",
        "SecurityProtocol": "SASL_SSL",
        "SaslMechanism": "PLAIN",
        "SaslUsername": "$ConnectionString",
        "SaslPassword": "Endpoint=***"
      }
    ],
    "Kusto": [
      {
        "Name": "KustoSink1",
        "ClusterUrl": "https://mycluster.kusto.windows.net",
        "Database": "mydatabase",
        "Table": "mytable"
      }
    ],
    "MQTT": [
      {
        "Name": "MqttSink1",
        "Broker": "localhost",
        "Topic": "topic1"
      }
    ]
  },
  "EventRoutes": [
    {
      "SinkName": "KafkaSink1",
      "EventFormat": "EventNotification"
    },
    {
      "SinkName": "KustoSink1",
      "EventFormat": "DataHistory"
    }
  ]
}